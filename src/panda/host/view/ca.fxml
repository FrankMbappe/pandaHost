<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>

    <columnConstraints>
        <ColumnConstraints halignment="LEFT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">

        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="250.0" prefWidth="250.0">

        </ColumnConstraints>
    </columnConstraints>

    <Label text="JavaFX's CA" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="1">
      <font>
         <Font name="Open Sans" size="24.0" />
      </font>
        <GridPane.margin>
            <Insets bottom="20" left="20" right="20" top="20" />
        </GridPane.margin>
    </Label>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button fx:id="submit" text="LOG IN" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets top="10" left="10" right="10" bottom="10"/>
        </GridPane.margin>
        <padding>
            <Insets top="10" left="20" right="20" bottom="10"/>
        </padding>
    </Button>

</GridPane>
